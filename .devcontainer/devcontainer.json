{
	"name": "Agentic AI",
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bookworm",

	"features": {
	},

	"runArgs": [
		"--network=host"
	],

	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.debugpy",
				"ms-python.vscode-pylance",
				"njpwerner.autodocstring", 
				"charliermarsh.ruff" 
			]
		}
	},

	"postCreateCommand": "pip install --upgrade pip && pip install --user -r requirements.txt",

	"remoteUser": "vscode"
}